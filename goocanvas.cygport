inherit gnome2

NAME="goocanvas"
VERSION=1.0.0
RELEASE=1
CATEGORY="Libs"
SUMMARY="cairo-based GTK+ canvas widget library"
DESCRIPTION="A cairo-based canvas widget library for GTK+"
HOMEPAGE="http://sourceforge.net/projects/goocanvas/"

PKG_NAMES="lib${NAME}3 lib${NAME}-devel"
libgoocanvas3_CONTENTS="--exclude=gtk-doc usr/bin/*-3.dll usr/share/"
libgoocanvas_devel_CONTENTS="usr/include/ usr/lib/ usr/share/gtk-doc/"
